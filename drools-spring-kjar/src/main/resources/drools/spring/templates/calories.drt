template header
minCal
maxCal


package drools.spring.templates;

import rs.ac.uns.ftn.backend.model.Ingredient;
import java.util.ArrayList;
global ArrayList<Ingredient> ingredients;

template "calories-rules"

rule "Calories_@{row.rowNumber}"
no-loop true
when
    $ingredient: Ingredient(calories >= @{minCal}, calories <= @{maxCal})
then
    ingredients.add($ingredient);
end

end template

