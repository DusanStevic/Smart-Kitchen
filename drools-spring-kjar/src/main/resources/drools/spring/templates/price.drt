template header
minPrice
maxPrice


package drools.spring.templates;

import rs.ac.uns.ftn.backend.model.Ingredient;
import java.util.ArrayList;
global ArrayList<Ingredient> ingredients;

template "price-rules"

rule "Price_@{row.rowNumber}"
no-loop true
when
    $ingredient: Ingredient(price >= @{minPrice}, price <= @{maxPrice})
then
    ingredients.add($ingredient);
end

end template

