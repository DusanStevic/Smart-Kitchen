/*Like rules*/

rule "Calculate like-dislike ratio when all values are 0 like-dislike=ld=00=0 "
    when
        $rating: Rating(frequencyLike == 0 && frequencyDislike == 0)
    then
    	// dividing by zero
    	modify($rating) { 
    		setLikeDislikeRatio(Double.parseDouble(new DecimalFormat("#.##").format(0*100)));
    	}    
end

rule "Calculate like dislike ratio like-dislike=ld=01=1"
    when
        $rating: Rating(frequencyLike == 0 && frequencyDislike != 0)
    then
        
    	// ratio = 0 / number of dislikes = 0 = 0 %
    	modify($rating) { 
    		setLikeDislikeRatio(Double.parseDouble(new DecimalFormat("#.##").format(0*100)));	
    	}
end

rule "Calculate like dislike ratio like-dislike=ld=10=2"
    when
        $rating: Rating(frequencyLike != 0 && frequencyDislike == 0)
    then
        
    	// ratio = number of likes / number of likes = 1 = 100%
    	modify($rating) { 
    		setLikeDislikeRatio(Double.parseDouble(new DecimalFormat("#.##").format(1*100)));      		
    	}
end

